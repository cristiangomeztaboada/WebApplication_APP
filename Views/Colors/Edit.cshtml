@model WebApplication_API.Models.Color

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Color</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="iden" />
            <div class="form-group">
                <label asp-for="codigo" class="control-label"></label>
                <div class="row">
                    <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10">
                        <input asp-for="codigo" class="form-control" id="ColorCodigo" />
                    </div>
                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                        @(Html.DevExtreme().Button()
                        .ID("BuscadorColor")
                        .Icon("find")
                        .OnClick("BuscadorColorOnClick")
                        )
                    </div>
                </div>
                <span asp-validation-for="codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TieneError" /> @Html.DisplayNameFor(model => model.TieneError)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Error" class="control-label"></label>
                <input asp-for="Error" class="form-control" />
                <span asp-validation-for="Error" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
